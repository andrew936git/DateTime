<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blueViolet"
        app:titleTextColor="@color/white"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/getImageViewIV"
        android:layout_width="@dimen/_300dp"
        android:layout_height="@dimen/_300dp"
        android:layout_margin="@dimen/_8dp"
        android:layout_gravity="center"
        tools:ignore="ContentDescription"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8dp"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/nameTextViewTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8dp"
        android:textSize="@dimen/_12pt"
        android:layout_weight="2"
        android:gravity="center"/>
    <TextView
        android:id="@+id/surnameTextViewTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8dp"
        android:textSize="@dimen/_12pt"
        android:layout_weight="2"
        android:gravity="center"/>

    </LinearLayout>
    <TextView
        android:id="@+id/phoneTextViewTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8dp"
        android:textSize="@dimen/_12pt"
        android:gravity="center"/>

    <TextView
        android:id="@+id/dateTextViewTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8dp"
        android:textSize="@dimen/_12pt"
        android:gravity="center"/>

    <TextView
        android:id="@+id/timerTextViewTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8dp"
        android:textSize="@dimen/_12pt"
        android:gravity="center"/>

</LinearLayout>